{
	"schemaVersion": 1,
	"id": "restorepoint",
	"version": "${version}",
	"name": "Restore Point",
	"description": "Add save and load points, also change time",
	"authors": [
		"Tfarcenim"
	],
	"accessWidener": "restorepoint.accesswidener",
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/restorepoint/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"tfar.restorepoint.RestorePoint"
		],
		"client": [
			"tfar.restorepoint.RestorePointClient"
		]
	},
	"mixins": [
      "restorepoint.mixins.json",
		{
			"config": "restorepoint.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.15.0",
		"minecraft": "~1.20.2",
		"java": ">=17",
		"fabric-api": "*"
	}
